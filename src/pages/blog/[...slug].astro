---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';
import { render } from 'astro:content';

export async function getStaticPaths() {
	const posts = await getCollection('sessions');
	return posts.map((post) => ({
		params: { slug: post.id },
		props: post,
	}));
}
type Props = CollectionEntry<'sessions'>;

const post = Astro.props;
const { Content } = await render(post);

// sessionDateの処理
const postData = {...post.data};

// sessionDateが存在し、文字列の場合はDateオブジェクトに変換
if (postData.sessionDate) {
  if (typeof postData.sessionDate === 'string') {
    postData.sessionDate = new Date(postData.sessionDate);
  }
} else {
  // sessionDateが存在しない場合は現在の日付を設定
  postData.sessionDate = new Date();
}
---

<BlogPost {...postData}>
	<Content />
</BlogPost>
